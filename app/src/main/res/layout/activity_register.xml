<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/et_r_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_r_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="PW"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_r_city"
        app:layout_constraintStart_toStartOf="@+id/et_r_city"
        app:layout_constraintTop_toBottomOf="@+id/et_r_city" />

    <EditText
        android:id="@+id/et_r_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_r_id"
        app:layout_constraintStart_toStartOf="@+id/et_r_id"
        app:layout_constraintTop_toBottomOf="@+id/et_r_id" />

    <Button
        android:id="@+id/btn_r_reg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/et_r_cpw"
        app:layout_constraintStart_toStartOf="@+id/et_r_cpw"
        app:layout_constraintTop_toBottomOf="@+id/et_r_cpw" />

    <EditText
        android:id="@+id/et_r_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_r_phone"
        app:layout_constraintStart_toStartOf="@+id/et_r_phone"
        app:layout_constraintTop_toBottomOf="@+id/et_r_phone" />

    <EditText
        android:id="@+id/et_r_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_r_name"
        app:layout_constraintStart_toStartOf="@+id/et_r_name"
        app:layout_constraintTop_toBottomOf="@+id/et_r_name" />

    <EditText
        android:id="@+id/et_r_cpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="confirm PW"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_r_pw"
        app:layout_constraintStart_toStartOf="@+id/et_r_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_r_pw" />

    <EditText
        android:id="@+id/et_r_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="city"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_r_email"
        app:layout_constraintStart_toStartOf="@+id/et_r_email"
        app:layout_constraintTop_toBottomOf="@+id/et_r_email" />
</androidx.constraintlayout.widget.ConstraintLayout>